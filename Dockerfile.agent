# NuClaw Agent Container
# This container runs the Claude Agent with access to mounted directories

FROM node:20-alpine

# Install required packages
RUN apk add --no-cache \
    bash \
    git \
    openssh-client \
    curl \
    jq \
    && rm -rf /var/cache/apk/*

# Create non-root user
RUN addgroup -g 1000 node && \
    adduser -u 1000 -G node -s /bin/bash -D node

# Set working directory
WORKDIR /workspace

# Switch to non-root user
USER node

# Default command
CMD ["bash"]
